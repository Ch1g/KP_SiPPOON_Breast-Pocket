<% unless $message == nil then%>
  <div class="alert alert-success" role="alert">
    <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
    <span class="sr-only"></span>
    Запись из таблицы <%=$message[1] %> успешно удалена
  </div>
<% end %>
<div class="container">
  <div class="row">
    <form role="form" method="POST" action="/admin/versions/new" class="col-md-9 go-right border-top">
      <br/>
      <h2>П0cTbl BEPcuu*</h2>
      <p>Укажите здесь версию и информацию о ней.</p>
      <div class="form-group">
        <label for="name">Версия</label>
        <input id="name" name="version" type="text" class="form-control" required>
      </div>
      <div class="form-group">
        <label for="message">Информация</label>
        <textarea id="message" name="infos" class="form-control" style="height: 150px" required></textarea>
      </div>
      <% if @access then%>
        <div class="alert alert-success text-center" role="alert">
          <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
          <span class="sr-only">Успех:</span>
          <%= @access %>
        </div>
      <% end %>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Отправить</button>
      </div>
    </form>
  </div>
</div>
<label>Отзывы</label>
<table class="table table-hover table-bordered text-center">
  <thead>
  <tr>
    <th>ID</th>
    <th>Имя</th>
    <th>Е-мэйл</th>
    <th>Отзыв</th>
    <th class="text-center">Действия</th>
  </tr>
  </thead>
  <tbody>
  <% CRUD::Crm.all.each do |row| %>
    <tr>
      <td><%= row.id_crm %></td>
      <td><%= row.name %></td>
      <td><%= row.mail %></td>
      <td><%= row.feedback %></td>
      <td><a href="/admin/crms/<%=row.id_crm%>/delete" role="button" class="btn btn-danger">Удалить</a></td>
    </tr>
  <% end %>
  </tbody>
</table>